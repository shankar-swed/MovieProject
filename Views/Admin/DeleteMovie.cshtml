@model CodWizardsMovieShop.Models.Db.Movie

@{
    ViewData["Title"] = "Delete Movie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center mt-5 mb-5">
    <div class="card border-3 border-danger" style="border-radius:7px; width: 40rem;">
        <div class="card-header bg-dark text-white text-center">
            <h3 class="card-title">Delete Movie</h3>
        </div>
        <div class="card-body text-center" style="height:50%">
            <h5>Are you sure you want to delete this movie?</h5>
            <div class="mt-3 d-flex justify-content-center">
              @*   @Html.Partial("_DisplayMoviePartialView") *@
                <div class="card h-100">
                    <img src="@Model.MovieUrl" class="card-img-top img-fluid" alt="...">
                    <div class="card-body text-dark bg-dark-subtle p-3">

                        <div class="card-text text-start w-auto">
                            <div class="m-auto">
                                <p>
                                    <a class="link-offset-2-hover link-underline link-underline-opacity-0 fw-bold" href="@Url.Action("MovieDetails", "Customer", new { id = Model.Id })">@Model.Title</a>
                                </p>
                                <p>
                                    Director : @Model.Director
                                </p>
                                <p>
                                    Release Year : @Model.ReleaseYear
                                </p>
                                <p>
                                    Price : @Model.Price SEK
                                </p>

                                
                            </div>

                        </div>

                    </div>
                </div>
            </div>
            <div class="alert alert-warning mt-3" role="alert">
                <strong>Warning:</strong> This action cannot be undone.
            </div>
            <form asp-action="DeleteMovieConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger mr-2">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

