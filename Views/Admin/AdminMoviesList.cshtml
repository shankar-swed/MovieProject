@model IEnumerable<CodWizardsMovieShop.Models.Db.Movie>

@{
    ViewData["Title"] = "Movies List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Movies List</h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var movie in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@movie.MovieUrl" class="card-img-top" alt="@movie.Title"
                         style="max-height: 250px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title text-truncate" title="@movie.Title">@movie.Title</h5>
                        <p class="card-text">
                            <strong>Director:</strong> @movie.Director<br />
                            <strong>Year:</strong> @movie.ReleaseYear<br />
                            <strong>Price:</strong> @movie.Price SEK
                        </p>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex justify-content-between">
                        <a href="@Url.Action("EditMovie", "Admin", new { id = movie.Id })"
                           class="btn btn-warning flex-fill mx-1">Edit</a>
                        <a class="btn btn-danger" asp-controller="admin" asp-action="DeleteMovie" asp-route-id="@movie.Id">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
