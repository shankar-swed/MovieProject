@model CodWizardsMovieShop.Models.Db.Customer

@{
    ViewData["Title"] = "Delete Customer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center mt-5 mb-5">
    <div class="card border-3 border-danger" style="border-radius:7px; width: 40rem;">
        <div class="card-header bg-dark text-white text-center">
            <h3 class="card-title">Delete Customer</h3>
        </div>
        <div class="card-body bg-light text-center text-dark h-100 m-auto">
            <h5>Are you sure you want to delete this customer?</h5>
            <div class="mt-3 d-flex justify-content-center">
                @Html.Partial("_CustomerDetailPartial")
            </div>
            <div class="alert alert-warning mt-3" role="alert">
                <strong>Warning:</strong> This action cannot be undone.
            </div>
            <form asp-action="DeleteCustomerConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger mr-2">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
