@model CodWizardsMovieShop.Models.ViewModels.OrderViewModel

<div class="card border-success mb-3" style="border-radius: 7px;">
    <div class="card-header bg-success text-white">
        <h5 class="card-title">Order #@Model.OrderId</h5>
        <p class="mb-0">Order Date: @Model.OrderDate.ToString("MMMM dd, yyyy")</p>
        <p class="mb-0">Total Cost: <strong>@Model.TotalCost.ToString() SEK</strong></p>
    </div>
    <div class="card-body overflow-y-auto">
        <h6 class="card-subtitle mb-2 text-muted">Movies in this order:</h6>
        <ul class="list-group">
            @foreach (var movie in Model.Movies)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@movie.Title</strong> - @movie.ReleaseYear
                        <p class="mb-0">Director: @movie.Director</p>
                    </div>
                    <span class="badge bg-secondary">@movie.Price.ToString() SEK</span>
                </li>
            }
        </ul>
    </div>
</div>
