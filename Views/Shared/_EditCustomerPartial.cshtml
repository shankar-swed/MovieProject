@model CodWizardsMovieShop.Models.Db.Customer
@{
    ViewData["Title"] = "Edit Customer";
}



            <div class="row mb-3">
                <div class="col-md-6 ">

                    <label asp-for="FristName" class="form-label ">First Name</label>
                    <input asp-for="FristName" class="form-control" required/>
                    <span asp-validation-for="FristName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input asp-for="LastName" class="form-control" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-12">
                    <label asp-for="Email" class="form-label ">Email</label>
                    <input asp-for="Email" type=" email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    <label asp-for="PhoneNo" class="form-label">Phone Number</label>
                    <input asp-for="PhoneNo" type="tel" class="form-control"  required />
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>
            </div>

            <h5 class="mb-3">Billing information</h5>
            <div class="row mb-3">

                <div class="col-md-8">
                    <label asp-for="BillingAddress" class="form-label">Address</label>
                    <input asp-for="BillingAddress" class="form-control"   required />
                    <span asp-validation-for="BillingAddress" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="BillingZip" class="form-label">Zip Code</label>
                    <input asp-for="BillingZip" class="form-control"   required />
                    <span asp-validation-for="BillingZip" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    <label asp-for="BillingCity" class="form-label">City</label>
                    <input asp-for="BillingCity" class="form-control"  required />
                    <span asp-validation-for="BillingCity" class="text-danger"></span>
                </div>
            </div>


            <h5 class="mb-3">Delivery information</h5>
            <div class="row mb-3">
                <div class="col-md-8">
                    <label asp-for="DeliveryAddress" class="form-label">Address</label>
                    <input asp-for="DeliveryAddress" class="form-control"  required />
                    <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="DeliveryZip" class="form-label">Zip Code</label>
                    <input asp-for="DeliveryZip" class="form-control"  required />
                    <span asp-validation-for="DeliveryZip" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    <label asp-for="DeliveryCity" class="form-label">City</label>
                    <input asp-for="DeliveryCity" class="form-control"  required />
                    <span asp-validation-for="DeliveryCity" class="text-danger"></span>
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-block">Update</button>
            </div>
       

@section Scripts {
    <partial name="_ValidationScriptsPartial " />
}
