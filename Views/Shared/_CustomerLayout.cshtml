
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CodWizardsMovieShop</title>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

	<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
	@*     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	*@
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

	<link rel="stylesheet" href="~/CodWizardsMovieShop.styles.css" asp-append-version="true" />

</head>
<body class="d-flex-column">
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow">

			<nav class="navbar fixed-top navbar-expand-sm navbar-light navbar-toggleable-sm bg-dark box-shadow">
				<div class="container-fluid">
					<a class="navbar-brand text-white" asp-action="index" asp-controller="Admin">Code Wizards MovieShop</a>
					<button class="navbar-toggler text-bg-light " type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>




					<div class=" navbar-collapse collapse  d-sm-inline-flex">

						@{
							if (@HttpContextAccessor.HttpContext.Session.GetString("SessionCustomerName") != null)
							{
								<ul class="navbar-nav me-auto mb-2 mb-lg-0">
									&emsp;&emsp;
									<li class="nav-item">
										<a class="nav-link text-white" asp-controller="Customer" asp-action="index"><i class="bi bi-house-fill "></i></a>
									</li>&emsp;
									<li class="nav-item">
										<a class="nav-link text-white" asp-controller="Customer" asp-action="list"> Movies </a>
									</li>
									<li class="nav-item">
										<a class="nav-link text-white" asp-controller="Customer" asp-action="LogoutCustomer">Logout</a>
									</li>
									<li class="nav-item">
										<a class="nav-link text-white" asp-controller="Customer" asp-action="Orders" asp-route-email="@HttpContextAccessor.HttpContext.Session.GetString("SessionCustomerEmail")">Orders</a>
									</li>


								</ul>

								<div class="position-relative">


									<a class="text-light nav-link me-5">@HttpContextAccessor.HttpContext.Session.GetString("SessionCustomerName")</a>

								</div>

							}
							else
							{
								<ul class="navbar-nav me-auto mb-2 mb-lg-0">
									&emsp;&emsp;
									<li class="nav-item">
										<a class="nav-link text-white" asp-controller="Customer" asp-action="index"><i class="bi bi-house-fill "></i></a>
									</li>&emsp;

									<li class="nav-item">
										<a class="nav-link text-white" asp-controller="Customer" asp-action="list"> Movies </a>
									</li>

									<li class="nav-item">
										<a class="nav-link text-white" asp-controller="Customer" asp-action="CreateCustomer">Register</a>
									</li>
									<li class="nav-item">
										<a class="nav-link text-white" asp-controller="Customer" asp-action="LoginCustomer">Login</a>
									</li>
									<li class="nav-item">
									</li>

								</ul>

							}
						}
						@* 	<div>
						<a class="nav-link text-white active" id="home" asp-controller="Customer" asp-action="Index">Home</a>
						<a class="nav-link text-white active" id="home" asp-controller="Customer" asp-action="List">All Movies</a>
						<form class="d-flex" role="search">
						<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
						<button class="btn btn-outline-success" type="submit">Search</button>
						</form>
						</div> *@


						<div class="position-relative">
							<a class="nav-link text-white pe-3" asp-controller="Order" asp-action="CartDetails" target="_parent">
								@{
									@using Microsoft.AspNetCore.Http;
									@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
									if (@HttpContextAccessor.HttpContext.Session.GetInt32("cartcountS") > 0)
									{
										<i class="bi bi-cart4" style="font-size: 2rem;">
											<span class="position-absolute top-0 start-50 translate-middle badge rounded-pill bg-dark" style="font-size: 0.75rem" id="cartCount">

												@HttpContextAccessor.HttpContext.Session.GetInt32("cartcountS")
											</span>
										</i>
									}
									else
									{
										<i class="bi bi-cart4" style="font-size: 2rem;">
											<span class="position-absolute top-0 start-50 translate-middle badge rounded-pill bg-dark" style="font-size: 0.75rem" id="cartCount">	</span>
										</i>
									}
								}

							</a>

						</div>


					</div>
				</div>
			</nav>
	</header>
	<div class="container-fluid mt-5 topmargin">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	@* 	<footer class="bg-body-tertiary text-center text-lg-start">
	*@
	<footer class="footer mt-auto">
		<div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.05);">
			© 2024 Copyright:
			<a class="text-body" href="#">CodeWizards</a>
		</div>

	</footer>


	@* 	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	*@
	<script src="~/js/validations.js"></script>
	<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>