@model IEnumerable<CodWizardsMovieShop.Models.Db.Movie>

@{
	ViewData["Title"] = "All Movies";
	Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}


<!-- List of movies with PartialView -->
<div class="container-fluid mb-3 text-center">
    
    <div class="row mt-5">
        <div class="fs-3">
            <strong>ALL MOVIES</strong>
        </div>
        
            @foreach (var movie in Model)
            {
                <div class="col-12 col-sm-4 col-md-3 col-lg-3 col-xl-2 me-4">

                    <partial name="_DisplayMoviePartialView" model="movie"></partial>

                </div>

            }
            
    </div>

</div>

